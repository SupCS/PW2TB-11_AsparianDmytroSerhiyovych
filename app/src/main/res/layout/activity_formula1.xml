<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Кнопка повернення на головний екран -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад" />

    <!-- Введення теплоти згоряння -->
    <EditText
        android:id="@+id/input_heat_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Теплота згоряння (Q_i)" />

    <!-- Введення маси палива -->
    <EditText
        android:id="@+id/input_fuel_mass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Маса палива (B_i)" />

    <!-- Введення показника емісії -->
    <EditText
        android:id="@+id/input_emission_factor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Показник емісії (k_j)" />

    <!-- Кнопка для розрахунку -->
    <Button
        android:id="@+id/calculate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Розрахувати" />

    <!-- Поле для виведення результату -->
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Результати будуть тут"
        android:textSize="18sp" />

</LinearLayout>
